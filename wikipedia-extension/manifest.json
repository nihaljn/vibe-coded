{
  "manifest_version": 3,
  "name": "Wikipedia Tracker",
  "version": "1.0.0",
  "description": "Track Wikipedia reading history, highlights, and notes locally",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "sidePanel",
    "downloads"
  ],
  "host_permissions": [
    "*://*.wikipedia.org/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.wikipedia.org/*"],
      "js": ["storage.js", "content.js"],
      "css": ["content.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Wikipedia Tracker"
  },
  "side_panel": {
    "default_path": "popup.html"
  },
  "icons": {
    "128": "icons/icon.svg"
  }
}